<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link
			href="https://fonts.googleapis.com/css?family=Mulish&display=swap"
			rel="stylesheet"
		/>
		<link
			href="https://fonts.googleapis.com/css?family=Share+Tech+Mono&display=swap"
			rel="stylesheet"
		/>
		<link rel="stylesheet" type="text/css" href="/stylesheets/style.css" />

		<title>Gestión de pacientes</title>
	</head>
	<body>
		<div class="style-header">
			<div class="icono_encabezado user"></div>
			<span class="encabezado">Gestión de pacientes</span>
		</div>
		<div class="reloj">
			<p class="tiempo"></p>
			<p class="fecha"></p>
		</div>

		<div class="button-container2 sin-foto">
			<label for="dniPaciente">Ingrese el DNI del paciente</label>
			<br />
			<form
				id="searchPatientForm"
				action="/patients/patient-search"
				method="post"
			>
				<input
					type="text"
					name="dniPaciente"
					class="style-input"
					placeholder="Ingrese el DNI del paciente"
					required
				/>
				<button type="submit" class="button-gral">Buscar</button>
			</form>
			<div class="button-container4"><button class="button-gral" onclick="location.href='/patients/patient-management'">Atrás</button></div>
		</div>
		<% if (typeof pacienteFiltrado !== 'undefined' && pacienteFiltrado.length
		> 0) { %>
		<div class="results">
			<h2>Resultados de la búsqueda</h2>
			<ul>
				<% pacienteFiltrado.forEach(pacienteFiltrado => { %>
				<li>
					Nombre: <%= pacienteFiltrado.nombreCompleto %> - Email: <%=
					pacienteFiltrado.email %> - Fecha de Nacimiento: <%=
					pacienteFiltrado.fechaNacimiento %>
					<a
						href="/patients/patient-update/<%= pacienteFiltrado.idPaciente %>"
						class="button-edit"
						>Editar</a
					>
					<form
						id="patient-delete-<%= pacienteFiltrado.idPaciente %>"
						action="/patients/patient-delete"
						method="post"
						style="display: inline"
					>
						<input
							type="hidden"
							name="idPaciente"
							value="<%= pacienteFiltrado.idPaciente %>"
						/>
						<button type="submit" class="button-delete">Eliminar</button>
					</form>
				</li>
				<% }) %>
			</ul>
		</div>
		<% } else if (typeof paciente !== 'undefined') { %>
		<div class="no-results">
			<p>No se encontraron pacientes para el DNI proporcionado</p>
		</div>
		<% } %>

		<script>
			document
				.getElementById('patient-delete')
				.addEventListener('submit', function (event) {
					event.preventDefault();

					const form = event.target;
					const formData = new FormData(form);
					const data = new URLSearchParams(formData);

					fetch('/patients/patient-delete', {
						method: 'POST',
						body: data,
					})
						.then((response) => {
							if (!response.ok) {
								throw new Error(
									'Error en la solicitud: ' + response.statusText
								);
							}
							return response.json();
						})
						.then((result) => {
							alert(result.message);
							window.location.href = '/patients/patient-management';
						})
						.catch((error) => {
							console.error('Error:', error);
							alert('Ocurrió un error al actualizar los suministros.');
						});
				});
		</script>
		<script src="/scripts/reloj.js"></script>
	</body>
</html>
